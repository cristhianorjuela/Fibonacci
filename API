using Microsoft.AspNetCore.Mvc;

[Route("api/fibonacci")]
[ApiController]
public class FibonacciController : ControllerBase
{
    [HttpGet("{n}")]
    public ActionResult<long> GetFibonacci(int n)
    {
        if (n < 0)
        {
            return BadRequest("El Ã­ndice debe ser no negativo.");
        }

        if (n <= 1)
        {
            return Ok(n);
        }

        long fib = 1;
        long prev = 1;

        for (int i = 2; i < n; i++)
        {
            long temp = fib;
            fib += prev;
            prev = temp;
        }

        return Ok(fib);
    }
}
